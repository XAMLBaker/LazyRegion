<Window
    x:Class="DataTemplateChange.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:SampleScreen.Base;assembly=SampleScreen"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DataTemplateChange"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DataTemplateChange.ViewModels"
    xmlns:wpf="clr-namespace:LazyRegion.WPF;assembly=LazyRegion.WPF"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:AViewModel}">
            <base:ScreenA />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:BViewModel}">
            <base:ScreenB />
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <wpf:LazyStage Content="{Binding CurrentViewModel}" TransitionAnimation="{Binding SelectAnimationType}" />
        <Border Grid.Column="1" Padding="10">
            <Grid>
                <ListBox
                    VerticalAlignment="Top"
                    ItemsSource="{Binding TransitionAnimations}"
                    SelectedItem="{Binding SelectAnimationType}" />
                <Button
                    Width="100"
                    Height="50"
                    VerticalAlignment="Bottom"
                    Command="{Binding GoCommand}"
                    Content="변환" />
            </Grid>
        </Border>
    </Grid>
</Window>
