<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LazyRegion.WPF">

    <Style TargetType="{x:Type local:LazyRegion}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:LazyRegion}">
                    <Grid x:Name="PART_RootGrid" ClipToBounds="True">
                        <ContentControl x:Name="PART_Content1" />
                        <ContentControl x:Name="PART_Content2" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
