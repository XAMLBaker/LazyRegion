<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiInteractiveRegionSample.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:lz="clr-namespace:LazyRegion.Maui;assembly=LazyRegion.Maui">
    <!--  드래그 기반 네비게이션  -->
    <lz:InteractiveLazyRegion
        DragDirection="Horizontal"
        DragStartCommand="{Binding StartCommand}"
        DragThreshold="0.3"
        EnableDragNavigation="True"
        RegionName="MainRegion"
        TransitionDuration="0:0:0.3" />
</ContentPage>
